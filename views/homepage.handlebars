<!-- Loop over each object in the recipes array -->
{{#each recipes as |recipe| }}
<div class="row mb-4 recipe">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/recipe/{{recipe.id}}">{{recipe.name}}</a>
    </h2>
    <p>
      <i class="em em-weight_lifter" aria-role="presentation" aria-label=""></i>
      <!-- Pass recipe_calories value to the helper function -->
      <span class="calorie-count">{{format_count calorie.recipe_calories}}</span>
      Calories
    </p>
    <p>Created by {{recipe.user.name}} on {{format_date recipe.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{recipe.description}}
    </p>
  </div>
</div>
{{/each}}
